<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.ProfileActivity">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView android:id="@+id/imageViewNames"
                android:layout_column="0"
                android:src="@drawable/contact_card_24"
                android:paddingRight="25dp"
                android:layout_gravity="center_vertical" />
            <EditText
                android:inputType="textPersonName"
                android:hint="Nombres"
                android:ems="10"
                android:id="@+id/pprofile_names"
                android:layout_column="1"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:inputType="textPersonName"
                android:hint="Apellidos"
                android:ems="10"
                android:id="@+id/profile_lastnames"
                android:layout_column="1"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/profile_ci"
                android:layout_column="1"
                android:hint="Cédula de Identidad" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">

            <ImageView android:id="@+id/imageViewNaci"
                android:layout_column="0"
                android:src="@drawable/calendar_24"
                android:paddingRight="25dp"
                android:layout_gravity="center_vertical" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/nacimi"
                android:layout_column="1"
                android:hint="Fecha de nacimiento" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView android:id="@+id/imageViewcell"
                android:layout_column="0"
                android:src="@drawable/phone_disconnected_24"
                android:paddingRight="25dp"
                android:layout_gravity="center_vertical" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/profile_phone"
                android:layout_column="1"
                android:hint="Teléfono" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView android:id="@+id/imageViewphone"
                android:layout_column="0"
                android:src="@drawable/cell_phone_24"
                android:paddingRight="25dp"
                android:layout_gravity="center_vertical" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/profile_cell"
                android:layout_column="1"
                android:hint="Celular" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView android:id="@+id/imageViewpDir"
                android:layout_column="0"
                android:src="@drawable/map_marker_24"
                android:paddingRight="25dp"
                android:layout_gravity="center_vertical" />
            <EditText
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/profile_dir"
                android:layout_column="1"
                android:hint="Dirección"
                android:lines="2" />
        </TableRow>

    </TableLayout>
    </ScrollView>
</RelativeLayout>
